@model TicketsViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Tickets"];
}

<div class="block1">
    <h1 align="center">@Localizer["Tickets List"]</h1>
    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>@Localizer["Event"]</th>
                    <th>@Localizer["Price"]</th>
                    <th>@Localizer["Seller"]</th>
                    <th>@Localizer["Status"]</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model.Tickets)
                {
                    <tr>
                        <td><strong>@ticket.Event.Name</strong></td>
                        <td>@ticket.Price </td>
                        <td>@ticket.Seller.FirstName </td>
                        <td>@ticket.Status </td>
                        <td>
                            @Html.ActionLink("Buy", "Index", "Order", new { id = ticket.Id, UserName = User.Identity.Name }, new { @class = "btn btn-primary" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>