@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<head>
    <style type="text/css">


        .tx {
            font-size: 13pt;
            font-weight: 600;
        }
    </style>
</head>

<ul class="navbar-nav">
    @if (User.Claims.Any())
    {
        <li class="nav-item">
            <p class="tx navbar-text">@Localizer["Hello"] @User.Identity.Name!</p>
        </li>
        <li class="nav-item">
            <a class="tx nav-link text-dark" asp-action="Profile" asp-controller="User">@Localizer["Profile"]</a>
        </li>
        @if (ViewBag.Role == "Administrator")
        {
            <li class="nav-item">
                <a class="tx nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">@Localizer["Admin"]</a>
            </li>
        }
        <li class="nav-item">
            <a class="tx nav-link text-dark" asp-action="Logout" asp-controller="User">@Localizer["Logout"]</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="tx nav-link text-dark" asp-action="Login" asp-controller="User">@Localizer["Login"]</a>
        </li>
    }
</ul>
