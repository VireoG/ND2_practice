@model Task1_Homework.Business.User
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = Localizer["Profile"];

}

@if (User.Identity.IsAuthenticated)
{
    <h1>@Localizer["Profile"]</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Profile">
                <div> <img src="~/img/@(Convert.ToBase64String(Model.Avatar))" width="150" height="220" vspace="50" hspace="30" class="leftimg" /> </div>
                <div class="form-group">
                    <input asp-for="Avatar" type="file" class="form-control" />
                    <span asp-validation-for="Avatar" class="text-danger"></span>
                </div>
                @Html.ActionLink("Save", "ChangeAvatar", "User", new { id = Model.Id }, new { @class = "btn btn-primary btnpad" })
                <p>
                    <strong> @Model.UserName </strong><br />

                </p>
                <ul>
                    <li> @Html.ActionLink("My sales requests", "SalesRequests", "Order", new { UserName = User.Identity.Name }, new { @class = "btn btn-primary btnpad" })</li>
                    <li class="nav-item">
                        <a class="btn btn-primary btnpad" href="../Identity/Account/Manage" title="Manage">Edit Profile</a>
                    </li>
                    <li> @Html.ActionLink("Logout", "Logout", "User", new { }, new { @class = "btn btn-primary btnpad" })</li>
                </ul>
            </form>
        </div>
    </div>
}
<div class="block1">
    <h3 align="center">@Localizer["Your Tickets"]</h3>
    <table class="table">
        <thead>
            <tr>
                <th>@Localizer["Event"]</th>
                <th>@Localizer["Price"]</th>
                <th>@Localizer["Status"]</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model.Tickets)
            {
                <tr>
                    <td>@ticket.Event.Name</td>
                    <td>@ticket.Price</td>
                    <td>@ticket.Status</td>
                </tr>
            }
        </tbody>
    </table>
</div>