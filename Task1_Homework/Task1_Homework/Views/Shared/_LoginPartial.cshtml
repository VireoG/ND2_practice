@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<ul class="navbar-nav">
    @if (User.Claims.Any())
    {
        <li class="nav-item">
            <p class="txfLoginPartial navbar-text">@Localizer["Hello"] @User.Identity.Name!</p>
        </li>
        <li class="nav-item">
            <a class="txfLoginPartial nav-link text-dark" asp-action="Profile" asp-controller="User">@Localizer["Profile"]</a>
        </li>
        @if (User.IsInRole("Administrator"))
        {
            <li class="nav-item">
                <a class="txfLoginPartial nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">@Localizer["Admin"]</a>
            </li>
        }
        <li class="nav-item">
            <a class="txfLoginPartial nav-link text-dark" asp-action="Logout" asp-controller="User">@Localizer["Logout"]</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="txfLoginPartial nav-link text-dark" asp-action="Login" asp-controller="User">@Localizer["Login"]</a>
        </li>
    }
</ul>
